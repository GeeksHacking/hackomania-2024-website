---
import { Image } from 'astro:assets'
import linkedin from '../assets/icons/linkedin.svg'

interface Props {
	name: string;
	role: string;
    profileImage: string;
	links: Record<string, string>;
}

const { name, role, profileImage, links } = Astro.props;
---
<div class="w-[265px] max-w-full h-[265px] relative bg-white rounded-2.5xl p-4 group" style={{background: `url(${profileImage})`}}>
    <div id="overlay" class="opacity-0 group-hover:opacity-100 transition-opacity w-[265px] max-w-full h-[265px] left-0 top-0 absolute z-10 bg-black bg-opacity-50 rounded-2.5xl p-4">
        <div class="flex flex-col w-fit gap-1">
            <div class="flex flex-col w-fit gap-1">
                <span class="text-white text-lg font-code font-bold">{name}</span>
                <div class="w-full h-[2px] bg-white" />
            </div>
            <span class="text-white text-lg font-code">{role}</span>
        </div>
        <div class="absolute bottom-4 end-4">
            {Object.entries(links).map(([socialMediaType, link]) => (
                <a href={link}>
                    {socialMediaType === 'linkedin' && <Image class="w-10 h-10" alt="Linkedin profile" src={linkedin} />}
                </a>
            ))}
        </div>
    </div>
  </div>
